{
  "name": "chernivtsi-transport",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "api",
    "app"
  ],
  "scripts": {
    "start": "lerna run start --stream",
    "start:api": "lerna run start --scope api",
    "start:app": "lerna run start --scope app",
    "start:dev": "lerna run --stream start:dev",
    "start:api:dev": "lerna run --scope api start:dev",
    "start:app:dev": "lerna run --scope app start:dev",
    "build": "lerna run build --stream",
    "format": "prettier **/*.js & echo formatting...",
    "lint": "eslint **/*.js"
  },
  "dependencies": {
    "lerna": "^3.8.0"
  },
  "devDependencies": {
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "cacheDirectories": [
    "api/node_modules",
    "app/node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "eslint --fix",
      "git add"
    ]
  }
}
